---
export interface Props {
    title: string;
    lang?: 'es' | 'en';
}

const { title, lang = 'es' } = Astro.props;

const categories = lang === 'en' ? {
    languages: 'Languages',
    frameworks: 'Frameworks',
    architecture: 'Architecture',
    devops: 'DevOps',
    cloud: 'Cloud',
    iac: 'IaC',
    databases: 'Databases',
    systems: 'Systems',
    tools: 'Tools',
    microservices: 'Microservices',
    hexagonal: 'Hexagonal Architecture',
    restful: 'RESTful APIs',
    clean: 'Clean Architecture'
} : {
    languages: 'Lenguajes',
    frameworks: 'Frameworks',
    architecture: 'Arquitectura',
    devops: 'DevOps',
    cloud: 'Cloud',
    iac: 'IaC',
    databases: 'Bases de Datos',
    systems: 'Sistemas',
    tools: 'Herramientas',
    microservices: 'Microservicios',
    hexagonal: 'Arquitectura Hexagonal',
    restful: 'RESTful APIs',
    clean: 'Clean Architecture'
};
---

<section id="technical-skills" class="section section-no-border bg-color-dark m-0">
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <h2 class="text-color-light text-uppercase font-weight-extra-bold mb-4">{title}</h2>
                
                <div class="row">
                    <!-- Lenguajes / Languages -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="tech-skill-category custom-box-shadow-2 bg-color-dark p-4">
                            <h4 class="text-color-primary font-weight-bold mb-3">
                                <i class="fas fa-code mr-2"></i>{categories.languages}
                            </h4>
                            <ul class="list-unstyled text-color-light">
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Java</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>SQL</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Frameworks -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="tech-skill-category custom-box-shadow-2 bg-color-dark p-4">
                            <h4 class="text-color-primary font-weight-bold mb-3">
                                <i class="fas fa-layer-group mr-2"></i>{categories.frameworks}
                            </h4>
                            <ul class="list-unstyled text-color-light">
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Spring Boot</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Spring Framework</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Quarkus</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Hibernate</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>JPA</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>JUnit</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Arquitectura / Architecture -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="tech-skill-category custom-box-shadow-2 bg-color-dark p-4">
                            <h4 class="text-color-primary font-weight-bold mb-3">
                                <i class="fas fa-project-diagram mr-2"></i>{categories.architecture}
                            </h4>
                            <ul class="list-unstyled text-color-light">
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>{categories.microservices}</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>{categories.hexagonal}</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>{categories.restful}</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>{categories.clean}</li>
                            </ul>
                        </div>
                    </div>

                    <!-- DevOps -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="tech-skill-category custom-box-shadow-2 bg-color-dark p-4">
                            <h4 class="text-color-primary font-weight-bold mb-3">
                                <i class="fas fa-infinity mr-2"></i>{categories.devops}
                            </h4>
                            <ul class="list-unstyled text-color-light">
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Docker</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Kubernetes</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>CI/CD</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>GitLab CI</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>GitHub Actions</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Cloud -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="tech-skill-category custom-box-shadow-2 bg-color-dark p-4">
                            <h4 class="text-color-primary font-weight-bold mb-3">
                                <i class="fas fa-cloud mr-2"></i>{categories.cloud}
                            </h4>
                            <ul class="list-unstyled text-color-light">
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Azure</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>AWS</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Google Cloud Platform</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Infraestructura como CÃ³digo / Infrastructure as Code -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="tech-skill-category custom-box-shadow-2 bg-color-dark p-4">
                            <h4 class="text-color-primary font-weight-bold mb-3">
                                <i class="fas fa-file-code mr-2"></i>{categories.iac}
                            </h4>
                            <ul class="list-unstyled text-color-light">
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Terraform</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Bases de Datos / Databases -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="tech-skill-category custom-box-shadow-2 bg-color-dark p-4">
                            <h4 class="text-color-primary font-weight-bold mb-3">
                                <i class="fas fa-database mr-2"></i>{categories.databases}
                            </h4>
                            <ul class="list-unstyled text-color-light">
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>PostgreSQL</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>MySQL</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Oracle</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Sistemas / Systems -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="tech-skill-category custom-box-shadow-2 bg-color-dark p-4">
                            <h4 class="text-color-primary font-weight-bold mb-3">
                                <i class="fas fa-server mr-2"></i>{categories.systems}
                            </h4>
                            <ul class="list-unstyled text-color-light">
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Linux</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Herramientas / Tools -->
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="tech-skill-category custom-box-shadow-2 bg-color-dark p-4">
                            <h4 class="text-color-primary font-weight-bold mb-3">
                                <i class="fas fa-tools mr-2"></i>{categories.tools}
                            </h4>
                            <ul class="list-unstyled text-color-light">
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Maven</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Gradle</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>Git</li>
                                <li class="mb-2"><i class="fas fa-circle text-primary mr-2" style="font-size: 0.5rem;"></i>SonarQube</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .tech-skill-category {
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        transition: all 0.3s ease;
        height: 100%;
    }

    .tech-skill-category:hover {
        border-color: var(--primary);
        transform: translateY(-5px);
    }

    .tech-skill-category h4 {
        font-size: 1.1rem;
        border-bottom: 2px solid var(--primary);
        padding-bottom: 0.5rem;
    }

    .tech-skill-category ul li {
        font-size: 0.9rem;
        opacity: 0.9;
        transition: opacity 0.2s ease;
    }

    .tech-skill-category ul li:hover {
        opacity: 1;
    }
</style>
