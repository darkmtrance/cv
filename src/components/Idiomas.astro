---
import { generateImage } from 'astro-eleventy-img';
//import ingles from 'img/demos/resume/about-me/origin/en.png';
//import espanhol from 'img/demos/resume/about-me/origin/es.png';
const en = generateImage('src/images/en.png', {
  // The options here are passed directly to eleventy-img
  widths: [16],
  formats: ['webp', 'avif'],
});

const es = generateImage('src/images/es.png', {
  // The options here are passed directly to eleventy-img
  widths: [16],
  formats: ['webp', 'avif'],
});

---


<div class="col-md-6 col-lg-4">
    <div class="row">
        <div class="col">
            <div class="custom-box-details bg-color-darken custom-box-shadow-1">
                <h4 class="text-color-light">Idiomas</h4>
                <ul class="custom-list-style-1 p-0">
                    <li>
                        <span class="font-weight-semibold custom-max-width-1 text-color-light"><img src={en.webp[0].url} class="flag flag-us me-1" alt="English" />Ingles:</span>
