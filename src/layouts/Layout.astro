import StructuredData from '../components/StructuredData.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;



---

<!DOCTYPE html>
<html lang="en" class="dark">

    <head>

		<!-- Basic -->
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">	

		<title>{title}</title>	
        <meta name="generator" content={Astro.generator} />
		<meta name="keywords" content="Software Architect, Java, Cloud, DevOps, Microservices, Azure, AWS, GCP" />
		<meta name="description" content="Michael Antonio Tomaylla Mendoza - Arquitecto de Software con más de 15 años de experiencia en desarrollo de sistemas empresariales, arquitectura cloud y mentoría técnica.">
		<meta name="author" content="Michael Tomaylla">

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website">
		<meta property="og:url" content="https://matomaylla.com/">
		<meta property="og:title" content={title}>
		<meta property="og:description" content="Arquitecto de Software con más de 15 años de experiencia especializado en Java, Cloud (Azure/AWS/GCP), DevOps y Microservicios.">
		<meta property="og:image" content="https://matomaylla.com/img/michael-og.jpg">

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image">
		<meta property="twitter:url" content="https://matomaylla.com/">
		<meta property="twitter:title" content={title}>
		<meta property="twitter:description" content="Arquitecto de Software con más de 15 años de experiencia especializado en Java, Cloud (Azure/AWS/GCP), DevOps y Microservicios.">
		<meta property="twitter:image" content="https://matomaylla.com/img/michael-og.jpg">

		<!-- Canonical URL -->
		<link rel="canonical" href="https://matomaylla.com/" />

		<!-- Favicon -->
		<link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon" />
		<link rel="apple-touch-icon" href="img/apple-touch-icon.png">

		<!-- Mobile Metas -->
		<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, shrink-to-fit=no">

		<!-- Preload Critical Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=IBM+Plex+Sans:wght@300;400;500;600;700&display=swap">

		<!-- Web Fonts -->
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=IBM+Plex+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<link id="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800&display=swap" rel="stylesheet" type="text/css">

		<!-- Head Libs -->
		<script is:inline src="vendor/modernizr/modernizr.min.js"></script>

		<!-- Structured Data -->
		<StructuredData />

	</head>
    <body data-plugin-scroll-spy data-plugin-options="{'target': '.wrapper-spy'}">
		<slot />
	</body>
</html>    